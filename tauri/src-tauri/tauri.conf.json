{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OCPQ",
  "mainBinaryName": "OCPQ",
  "version": "0.7.7",
  "identifier": "eu.aarkue.ocpq",
  "build": {
    "beforeBuildCommand": "cross-env NODE_OPTIONS=\"--max_old_space_size=4096\" npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist/",
    "devUrl": "http://localhost:4565"
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "targets": "all",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installerIcon": "./icons/icon.ico",
        "displayLanguageSelector": true
      }
    },
    "longDescription": "",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null
    },
    "resources": [],
    "shortDescription": "",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "fileAssociations": [
      {
        "ext": ["xml"],
        "mimeType": "text/xml"
      },      {
        "ext": ["json"],
        "mimeType": "text/plain"
      },
      {
        "ext": ["sqlite"],
        "mimeType": "application/x-sqlite3"
      }
    ]
  },
  "plugins": {},
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "OCPQ (App)",
        "width": 800,
        "useHttpsScheme": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}